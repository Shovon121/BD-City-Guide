<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bank.SelectedBankActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="180dp"
            app:cardCornerRadius="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/CadetBlue">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bank"
                    android:textColor="@color/white"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select your choice"
                    android:textColor="@color/white"
                    android:textSize="14sp"></TextView>


            </LinearLayout>


        </androidx.cardview.widget.CardView>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="80dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Are You Want to See All Bank Head office ?"
                android:textSize="14sp"
                android:textStyle="italic"
                android:layout_marginBottom="5dp"
                >

            </TextView>

            <Button
                android:id="@+id/bankHeadOffice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" All Bank Head Office"
                android:background="@drawable/custom_buttton"
                android:textColor="@color/Blue"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:textStyle="bold"></Button>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Or"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/MidnightBlue"
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:gravity="center_horizontal" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Are You Want to See All Bank Brance ?"
                android:textSize="14sp"
                android:layout_marginBottom="5dp"
                android:textStyle="italic"
                >

            </TextView>

            <Button
                android:id="@+id/bankBranc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bank Branc"
                android:background="@drawable/custom_buttton"
                android:textColor="@color/Blue"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                ></Button>

        </LinearLayout>


    </LinearLayout>



</ScrollView>